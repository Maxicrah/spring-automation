pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                script {
                    // Puedes agregar aquí comandos específicos para construir tu aplicación
                    // Por ejemplo: ./gradlew build o mvn clean install
                    sh 'mvn clean install'
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Detener y eliminar el contenedor existente
                    sh 'docker stop springbootmysql || true'
                    sh 'docker rm springbootmysql || true'

                    // Iniciar el contenedor con la nueva imagen desde DockerHub
                    sh 'docker run -d --name springbootmysqlproject -p 8080:8080 maxicrah/springbootmysql:latest'
                }
            }
        }
    }
}
